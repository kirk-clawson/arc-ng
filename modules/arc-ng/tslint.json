{
  "extends": "../../tslint.json",
  "rules": {
    "directive-selector": [
      true,
      ["element", "attribute"],
      "arcng",
      ["camelCase", "kebab-case"]
    ],
    "component-selector": [
      true,
      "element",
      "arcng",
      "kebab-case"
    ],
    "variable-name": {
      "options": ["ban-keywords", "check-format", "allow-leading-underscore", "allow-pascal-case"],
      "severity": "error"
    }
  }
}
